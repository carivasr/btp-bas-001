<mvc:View controllerName="logaligroup.employees.controller.MainView" 
          displayBlock="true"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"> 
          
    <Page id="page" title="{i18n>title}">
    <content><HBox width="100%" id="hbox0" alignItems="Center">
            <items>
                <Label text="{i18n>labelEmployee}" labelFor="inputEmployee" width="100%" id="labelEmployee" class="sapUiSmallMargin"/>
                <Input xmlns="sap.m" id="inputEmployee" value="{/employeeId}" maxLength="6" width="200px" class="sapUiSmallMarginend" liveChange="onValidate"/>
                <Label text="{i18n>labelCountry}" labelFor="slCountry" width="100%" id="labelCountry" class="sapUiSmallMargin" visible="false"/>
                <Select xmlns="sap.m" id="slCountry" selectedKey="{/countryKey}" forceSelection="false" items="{/listCountry}" visible="false">
                    <items>
                        <core:Item xmlns:core="sap.ui.core" key="{key}" text="{text}"/>  
                    </items>
                </Select>
            </items>
        </HBox>
    </content>
    </Page>
</mvc:View>